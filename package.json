{
  "name": "dan-gurney-personal-site",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/gen-styles/app.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npx wrangler pages dev ./public --binding $(cat .env) --kv KV --port 3000",
    "dev": "remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/gen-styles/app.css",
    "build": "npm run build:css && remix build"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.11.1",
    "@remix-run/cloudflare-pages": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "wrangler": "^2.1.11"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
